<style>
	.ProductName {
		white-space: nowrap;
		width: 200px;
		overflow: hidden;
		text-overflow: ellipsis;
	}
</style>

<body>


	<%- include('../include/header') %>


		<nav class="navbar navbar-main navbar-expand-lg navbar-light border-bottom">
			<div class="container">
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav"
					aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="main_nav">
					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a class="nav-link pl-0" data-toggle="dropdown" href="#"><strong> <i class="fa fa-bars"></i>
									&nbsp รายการสินค้า</strong></a>
							<div class="dropdown-menu">
								<a class="dropdown-item" href="/product">สินค้าทั้งหมด</a>
								<a class="dropdown-item" href="#">สินค้าใหม่</a>
							</div>
						</li>
						<% if(types.length> 0){ %>
							<% types.forEach((type, index)=> { %>
								<li class="nav-item">
									<a class="nav-link" href="/search/product/<%= type.type_id %>">
										<%= type.type_name %>
									</a>
								</li>
								<% }) %>
									<%} %>

					</ul>
				</div> <!-- collapse .// -->
			</div> <!-- container .// -->
		</nav>

		</header> <!-- section-header.// -->



		<!-- ========================= SECTION INTRO ========================= -->
		<section class="section-intro padding-y-sm">
			<div class="container">

				<div id="bannerShow" class="carousel slide" data-ride="carousel">
					<% if (banners.length > 0) { %>
					<ol class="carousel-indicators">
							<%  var i = 0; banners.forEach((bannerCount,index) => { %>
								<li data-target="#bannerShow" data-slide-to="<%= i %>" class="<%- i == 0 ? 'active' : '' %>"></li>
							<% i++; }) %>
					</ol>
					<div class="carousel-inner">
						<%  var x = 0; banners.forEach((bannerPic,index) => { %>
							<div class="carousel-item <%-  x == 0 ? 'active' : ''%>">
								<a href="<%- bannerPic.banner_link != '' ? bannerPic.banner_link : '#' %>" 
									<%- bannerPic.banner_link != '' ? 'target="_blank"' : '' %>	
									><img class="d-block w-100" src="/images/banners/<%= bannerPic.banner_picture %>" width="1100" height="300"></a>
							</div>
						<% x++; }) %>
					<a class="carousel-control-prev" href="#bannerShow" role="button" data-slide="prev">
					  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
					  <span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#bannerShow" role="button" data-slide="next">
					  <span class="carousel-control-next-icon" aria-hidden="true"></span>
					  <span class="sr-only">Next</span>
					</a>
				  </div>
				</div> <!-- container //  -->
				<% }else{ %>
					<div class="intro-banner-wrap">
						<img src="/images/banners/1.jpg" class="img-fluid rounded">
					</div>
				<%} %>

			</div> <!-- container //  -->
		</section>
		<!-- ========================= SECTION INTRO END// ========================= -->


		<!-- ========================= SECTION FEATURE ========================= -->

		<!-- ========================= SECTION FEATURE END// ========================= -->


		<!-- ========================= SECTION CONTENT ========================= -->
		<section class="section-content">
			<div class="container">

				<header class="section-heading">
					<h3 class="section-title">สินค้ายอดนิยม</h3>
				</header><!-- sect-heading -->


				<div class="row">
					<% if(Hotproducts.length> 0){ %>
						<% Hotproducts.forEach((hot, index)=> { %>
							<div class="col-md-3">
								<div href="#" class="card card-product-grid">
									<a href="/auth/detail/<%= hot.product_id %>" class="img-wrap"> <img src="/images/product/<%= hot.product_picture %>">
									</a><span class="badge badge-danger" >HOT</span>
									<figcaption class="info-wrap">
										<a href="/auth/detail/<%= hot.product_id %>" class="title ProductName">
											<%= hot.product_name %>
										</a>
										<div class="price mt-1">฿<%= hot.product_price %>
										</div> <!-- price-wrap.// -->
									</figcaption>
								</div>
							</div> <!-- col.// -->
							<% }) %>
								<%} %>
				</div> <!-- row.// -->

			</div> <!-- container .//  -->
		</section>
		<!-- ========================= SECTION CONTENT END// ========================= -->



		<!-- ========================= SECTION CONTENT ========================= -->
		<section class="section-content">
			<div class="container">

				<header class="section-heading">
					<h3 class="section-title">สินค้าใหม่</h3>
				</header><!-- sect-heading -->

				<div class="row">
					<% if(Newproducts.length> 0){ %>
						<% Newproducts.forEach((Newp, index)=> { %>
							<div class="col-md-3">
								<div href="#" class="card card-product-grid">
									<a href="#" class="img-wrap"> <img src="/images/product/<%= Newp.product_picture %>">
									</a><span class="badge badge-danger" >NEW</span>
									<figcaption class="info-wrap">
										<a href="/auth/detail/<%= Newp.product_id %>" class="title ProductName">
											<%= Newp.product_name %>
										</a>
										<div class="price mt-1">฿<%= Newp.product_price %>
										</div> <!-- price-wrap.// -->
									</figcaption>
								</div>
							</div> <!-- col.// -->
							<% }) %>
								<%} %>

				</div> <!-- row.// -->

			</div> <!-- container .//  -->
		</section>
		<!-- ========================= SECTION CONTENT END// ========================= -->



		<!-- ========================= SECTION CONTENT ========================= -->
		<section class="section-content padding-bottom-sm">
			<div class="container">

				<header class="section-heading">
					<a href="/product" class="btn btn-outline-primary float-right">ดูทั้งหมด</a>
					<h3 class="section-title">แนะนำ</h3>
				</header><!-- sect-heading -->

				<div class="row">
					<% if(AdviceProducts.length> 0){ %>
						<% AdviceProducts.forEach((advice, index)=> { %>
							<div class="col-md-3">
								<div href="#" class="card card-product-grid">
									<a href="#" class="img-wrap"> <img src="/images/product/<%= advice.product_picture %>">
									</a><span class="badge badge-danger" >Recommend</span>
									<figcaption class="info-wrap">
										<a href="/auth/detail/<%= advice.product_id %>" class="title ProductName">
											<%= advice.product_name %>
										</a>
										<div class="price mt-1">฿<%= advice.product_price %>
										</div> <!-- price-wrap.// -->
									</figcaption>
								</div>
							</div> <!-- col.// -->
							<% }) %>
								<%} %>
				
				</div> <!-- row.// -->

			</div> <!-- container .//  -->
		</section>
		<!-- ========================= SECTION CONTENT END// ========================= -->

		<!-- ========================= SECTION  ========================= -->

		<!-- ========================= SECTION  END// ========================= -->




		<!-- ========================= SECTION  END// ======================= -->




