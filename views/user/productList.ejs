<style>
	.ProductDetail {
		white-space: nowrap;
		width: 200px;
		overflow: hidden;
		text-overflow: ellipsis;
	}
</style>
<% if (products.length > 0){ %> 
    <% products.forEach((product, index)=> { %>
<article class="card card-product-list">
    <div class="row no-gutters">
        <aside class="col-md-3">
            <a href="#" class="img-wrap">
                <span class="badge badge-danger"> NEW </span>
                <img src="/images/product/<%= product.product_picture %>">
            </a>
        </aside> <!-- col.// -->
        <div class="col-md-6">
            <div class="info-main">
                
                <a href="#" class="h5 title"><%= product.product_name %></a>
               
                รายละเอียดสินค้า : 
                <p class="ProductDetail"><%= product.product_detail %></p>
            </div> <!-- info-main.// -->
        </div> <!-- col.// -->
        <aside class="col-sm-3">
            <div class="info-aside">
                <div class="price-wrap">
                    <span class="price h5"><%= product.product_price %> ฿</span>	
                    <!-- <del class="price-old"> $198</del> -->
                </div> <!-- info-price-detail // -->
                <p class="text-success">ส่งฟรี</p>
                <br>
                <p>
                    <a href="/detail" class="btn btn-primary btn-block"> รายละเอียด </a>
                    <a href="/auth/cartID=<%= product.product_id %> " class="btn btn-light btn-block"><i class="fa fa-shopping-cart"></i> 
                        <span class="text">เพิ่มสินค้าในตะกร้า</span>
                    </a>
                </p>
            </div> <!-- info-aside.// -->
        </aside> <!-- col.// -->
    </div> <!-- row.// -->
</article> <!-- card-product .// -->
<% }) %>
<% }else { %> 
    ไม่มีสินค้า
    <%}  %>

